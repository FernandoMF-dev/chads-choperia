<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

	<changeSet id="20230428152530-1" author="Fernando Martins Ferreira">
		<addColumn tableName="selfservice_notification">
			<column name="status" type="varchar(50)" defaultValue="OPEN">
				<constraints nullable="false"/>
			</column>

			<column name="close_date" type="timestamp"/>
		</addColumn>

		<rollback>
			<dropColumn tableName="selfservice_notification" columnName="status"/>
			<dropColumn tableName="selfservice_notification" columnName="close_date"/>
		</rollback>
	</changeSet>
</databaseChangeLog>
